5. Write a program to check if a linked list is Circular Linked List or not.

#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};


bool isCircular(Node *head) {
    if (head == NULL) 
        return false;

    Node *temp = head->next;


    while (temp != NULL && temp != head)
        temp = temp->next;

    return (temp == head);  
}

int main() {
    
    Node *n1 = new Node{10, NULL};
    Node *n2 = new Node{20, NULL};
    Node *n3 = new Node{30, NULL};

    n1->next = n2;
    n2->next = n3;
    n3->next = n1;  

    if (isCircular(n1))
        cout << "The linked list is Circular.";
    else
        cout << "The linked list is NOT Circular.";

    return 0;
}
